//check Hardy-Weinberg-equilibrium in every tenth generation for every individual
//------------------------------------------------------------------------------------------------------------------
1{writeFile("~/scratch/randomResults/random_hw_" + simID + ".txt", "all mutations, mutations in equilibrium", append=T);}
1:2000 late(){
	h=10;//check in every tenth generation
	if(sim.generation%h==0){
		mut2=sim.mutationsOfType(m2);//vector with deleterious mutations (m2)
		p_2=sim.mutationFrequencies(p1,mut2); //vector with m2-frequencies
		q_2=c(1)-p_2;
		inds=p1.individuals;
		m=size(inds);
		n2=size(p_2);
		exp_2_2=p_2^2*m; //number of expected values AA
		exp_1_2=2*p_2*q_2*m; //number of expected values Aa
		exp_0_2=q_2^2*m; //number of expected values aa
		
		idx=0;
		obs_2_2=rep(0,n2);
		obs_1_2=rep(0,n2);
		obs_0_2=rep(0,n2);
		for(mut22 in mut2){
			zyg = sapply(inds, "sum(applyValue.genomes.containsMutations(mut22));");
			obs_2_2[idx] = sum(zyg == 2);
			obs_1_2[idx] = sum(zyg == 1);
			obs_0_2[idx] = sum(zyg == 0);
			idx=idx+1;
		}
		//chi-quadrat test Pearson
		xsquare_2=((obs_2_2-exp_2_2)^2)/exp_2_2+((obs_1_2-exp_1_2)^2)/exp_1_2+((obs_0_2-exp_0_2)^2)/exp_0_2;
		chisquare=3.84; //one degree of freedom, alpha=0.05
		
		test=length(xsquare_2[xsquare_2<chisquare]);
		writeFile("~/scratch/randomResults/random_hw_" + simID + ".txt",(n2 + "," + test),append=T);
	}
}


